<?xml version="1.0" encoding="UTF-8"?>

<COMPONENT>
	<HEADER AUTHOR="cimt AG" COMPATIBILITY="ALL"
		SCHEMA_AUTO_PROPAGATE="false" DATA_AUTO_PROPAGATE="false"
		IS_MULTIPLYING_OUTPUTS="true" PLATEFORM="ALL" RELEASE_DATE="20130401A"
		SERIAL="" STARTABLE="false" STATUS="PROD" VERSION="1.0">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>Processing/Fields</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MIN_INPUT="1" MAX_INPUT="1"
			MIN_OUTPUT="1" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER NAME="SCHEMATEXT" FIELD="LABEL" COLOR="0;0;0"
			NUM_ROW="5">
			<DEFAULT>Please remove the output schema columns which are part of the repetition > 1</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
			NUM_ROW="10">
			<DEFAULT />
		</PARAMETER>

		<PARAMETER NAME="GROUP_START_COLUMN" FIELD="PREV_COLUMN_LIST"
			REQUIRED="true" NUM_ROW="15">
		</PARAMETER>

		<PARAMETER NAME="CONFIGTEXT" FIELD="LABEL" COLOR="0;0;0"
			NUM_ROW="17">
			<DEFAULT>The number of fields and occurrence cannot not set dynamically. 
You have to configure the output schema according to these values!</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="GROUP_SIZE" FIELD="TEXT" NUM_ROW="20"
			REQUIRED="true">
			<DEFAULT>1</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="NUMBER_REPEATION" FIELD="TEXT" NUM_ROW="30"
			REQUIRED="true">
			<DEFAULT>1</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="ACTIVATE_POSITION_COLUMN" FIELD="CHECK"
			NUM_ROW="40" REQUIRED="true">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="POSITION_COLUMN" FIELD="COLUMN_LIST"
			REQUIRED="true" NUM_ROW="40" SHOW_IF="ACTIVATE_POSITION_COLUMN == 'true'">
		</PARAMETER>

	</PARAMETERS>
	<ADVANCED_PARAMETERS></ADVANCED_PARAMETERS>
	<CODEGENERATION></CODEGENERATION>
	<RETURNS>
		<RETURN AVAILABILITY="AFTER" NAME="NB_LINE_IN" TYPE="id_Integer" />
		<RETURN AVAILABILITY="AFTER" NAME="NB_LINE_OUT" TYPE="id_Integer" />
	</RETURNS>
</COMPONENT>
